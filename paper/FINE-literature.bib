@phdthesis{gross2023_thesis,
      author       = {Groß, Theresa Martina},
      othercontributors = {Stolten, Detlef and Kukla, Peter},
      title        = {{M}ultiregionales {E}nergiesystemmodell mit {F}okus auf
                      {I}nfrastrukturen},
      volume       = {604},
